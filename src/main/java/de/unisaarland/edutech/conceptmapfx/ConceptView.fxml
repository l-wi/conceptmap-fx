<?xml version="1.0" encoding="UTF-8"?>

<?import org.comtel2000.keyboard.control.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.net.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="conceptPane"
	fx:controller="de.unisaarland.edutech.conceptmapfx.ConceptViewController"
	xmlns:fx="http://javafx.com/fxml/1" onMousePressed="#onMouseMovingStarted"
	onMouseReleased="#onMouseMoved" onMouseDragged="#onMouseMoving"
	onTouchMoved="#onTouchMoving" onScroll="#onRotate">

	<fx:define>
		<ToggleGroup fx:id="toggleGroup" />
	</fx:define>

	<top >
			<ToggleButton visible="false" managed="false" disable="true"  id="p1" BorderPane.alignment="CENTER"  fx:id="btnToogleUser1" styleClass="pBtn"
			mnemonicParsing="false" prefHeight="50.0" prefWidth="50" text="Ben"
			toggleGroup="$toggleGroup" />
		
	</top>
	<left>
	<ToggleButton visible="false" managed="false" disable="true" BorderPane.alignment="CENTER"  id="p2" fx:id="btnToogleUser2" styleClass="pBtn"
			mnemonicParsing="false" prefHeight="50.0" prefWidth="50" text="Han"
			toggleGroup="$toggleGroup" />
	</left>
	<right >
	<ToggleButton visible="false" managed="false" disable="true"  BorderPane.alignment="CENTER" id="p4" fx:id="btnToogleUser4" styleClass="pBtn"
			mnemonicParsing="false" prefHeight="50.0" prefWidth="50" text="Lea"
			toggleGroup="$toggleGroup" />
		
	</right>

	<center >
		<TextField  styleClass="concept"  BorderPane.alignment="CENTER"  fx:id="txtConcept" disable="true" prefHeight="50.0"
			onMousePressed="#onTxtMousePressed" onMouseDragged="#onMouseMoving"
			onTouchMoved="#onTouchMoving" onMouseReleased="#onTxtMouseReleased" />
	</center>
	
	<bottom>

		<ToggleButton visible="false" managed="false" disable="true"  BorderPane.alignment="CENTER" id="p3" fx:id="btnToogleUser3" styleClass="pBtn"
			mnemonicParsing="false" prefHeight="50.0" prefWidth="50" text="Chewi"
			toggleGroup="$toggleGroup" />

	</bottom>


	<stylesheets>
		<URL value="@editable.css" />
	</stylesheets>

</BorderPane>