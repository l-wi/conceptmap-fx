<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import org.comtel2000.keyboard.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.net.* ?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="input" fx:id="inputPane"
	xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.40"
	fx:controller="de.unisaarland.edutech.conceptmapfx.InputViewController">
	<!-- TODO Add Nodes -->
	<children>
		<HBox>
			<VBox fx:id="inputControls">
				<children>
					<HBox>
						<Button styleClass="hideable" id="btnClose" fx:id="btnClose" mnemonicParsing="false" onAction="#onCloseAction"
							prefHeight="80.0" prefWidth="80.0" text="" />
							
						<Label fx:id="lblStatus" text="" />
					</HBox>
					<HBox>
						<children>

							<KeyboardPane styleClass="hideable" id="keyboard" fx:id="keyboard" />
							<VBox>
								<children>
									<ToggleButton styleClass="hideable" id="voice" fx:id="btnSpeak"
										mnemonicParsing="false" prefWidth="100.0" prefHeight="100.0"/>
									<Button fx:id="btnNewConcept" text="+"
										onAction="#onNewAction" BorderPane.alignment="CENTER"  prefWidth="100.0" prefHeight="100.0"/>
								</children>
							</VBox>
						</children>
					</HBox>
				</children>
			</VBox>
			<BorderPane>
				<bottom>
				
				</bottom>
			</BorderPane>
		</HBox>
	</children>
	<stylesheets>
		<URL value="@input.css" />
	</stylesheets>
</AnchorPane>
